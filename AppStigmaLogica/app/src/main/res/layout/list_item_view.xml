<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">


        <View
            android:id="@+id/bloco_questao"
            android:layout_width="380dp"
            android:layout_height="142dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/caixaviewmenu" />

        <View
            android:id="@+id/linha"
            android:layout_width="330dp"
            android:layout_height="1dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"
            android:background="#3D000000" />


        <TextView
            android:id="@+id/txt_relato_item"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:hint="Null"
            android:textSize="18sp"
            android:maxLength="40"/>

        <TextView
            android:id="@+id/txt_emocao_item"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Null"
            android:layout_marginLeft="50dp"
            android:textColor="@color/rosa"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:layout_marginRight="50dp"/>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="110dp"
            android:background="@drawable/btn_apagar"
            android:id="@+id/btn_apagar"/>
    </FrameLayout>

</LinearLayout>