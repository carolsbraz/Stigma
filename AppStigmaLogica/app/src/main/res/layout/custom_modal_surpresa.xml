<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <View
        android:id="@+id/base_modal"
        android:layout_width="500dp"
        android:layout_height="236dp"
        android:layout_gravity="center"
        android:background="#FCFEFB" />

    <ImageView
        android:id="@+id/img_surpresa"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="right"
        android:layout_marginTop="50dp"
        android:background="@drawable/balloons" />

    <TextView
        android:id="@+id/txt_mensagem_surpresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:text="Feliz Aniversário,"
        android:textColor="@color/rosa"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txt_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="56dp"
        android:padding="10dp"
        android:text="nome_do_usuário"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_mensagem"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:padding="10dp"
        android:text="Desejo muitas felicidades pelos seus"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/txt_mensagem_1"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="170dp"
        android:padding="10dp"
        android:textColor="@color/azul"
        android:text="Continue com a família Stigma e escreva suas marcas!"
        android:textSize="14sp"/>

</FrameLayout>

