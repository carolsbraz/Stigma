<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.projeto.appstigma.QuestoesMotivadorasActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btn_voltar_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/voltar" />

        <ImageButton
            android:id="@+id/btn_listar_questoes"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/listar" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="114dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/logorosa" />

    </FrameLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="586dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textperguntas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="QuestÃµes motivadoras"
                android:textColor="@color/rosa"
                android:textSize="20sp" />




            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:text="Text"
                android:textColor="#357989"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/txt_relato"
                android:layout_width="387dp"
                android:layout_height="343dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="170dp"
                android:background="@drawable/caixatext"
                android:gravity="top"
                android:hint="Escreva aqui..."
                android:padding="20dp"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_salvar"
                android:layout_width="133dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="530dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/btn_color"
                android:text="responder"
                android:textColor="@android:color/background_light"
                android:textSize="12sp" />


        </FrameLayout>
    </ScrollView>

</LinearLayout>


