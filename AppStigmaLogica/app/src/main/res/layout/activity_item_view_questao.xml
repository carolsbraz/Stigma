<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/bloco_questao"
            android:layout_width="380dp"
            android:layout_height="142dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/caixaviewmenu" />

        <View
            android:id="@+id/linha"
            android:layout_width="330dp"
            android:layout_height="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:background="#3D000000" />

        <TextView
            android:id="@+id/txt_questao_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Null"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_pergunta_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="Null"
            android:textColor="@color/rosa"
            android:textSize="18sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:id="@+id/btn_apagar_questao"
            android:background="@drawable/btn_apagar" />
    </FrameLayout>

</LinearLayout>