<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PrincipalActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="114dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/logorosa" />

        <ImageButton
            android:id="@+id/btn_config"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/config" />


        <ImageButton
            android:id="@+id/btn_sair"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="26dp"
            android:layout_gravity="right"
            android:background="@drawable/exit" />

    </FrameLayout>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="380dp"
                android:layout_height="162dp"
                android:layout_marginTop="70dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/caixaviewmenu"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/perfil_redondo"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/img_avatar"
                />

            <!--
            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="514dp"
                android:layout_height="312dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:foregroundGravity="clip_horizontal"
                android:src="@drawable/base6" />
             -->
            <View
                android:layout_width="324dp"
                android:layout_height="170dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="150dp"
                android:background="@drawable/btn_color_menu_2"/>


            <ImageView
                android:layout_width="275dp"
                android:layout_height="172dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="150dp"
                android:src="@drawable/grafico" />


            <TextView
                android:id="@+id/txt_nome_logado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="125dp"
                android:gravity="clip_horizontal|center_vertical"
                android:text="Null"
                android:textColor="@color/azul"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_mensagem"
                android:layout_width="150dp"
                android:layout_height="175dp"
                android:layout_gravity="left"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="330dp"
                android:background="@drawable/caixaviewmenu" />

            <TextView
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="355dp"
                android:gravity="center"
                android:text="Mensagens diárias"
                android:textColor="@color/rosa"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="94dp"
                android:layout_marginTop="380dp"
                android:foregroundGravity="center|center_horizontal"
                android:src="@drawable/correio" />


            <Button
                android:id="@+id/btn_tela_mensagem"
                android:layout_width="121dp"
                android:layout_height="28dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="465dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/btn_color_menu"
                android:text="Ver"
                android:textColor="@android:color/background_light"
                android:textSize="10sp" />

            <View
                android:id="@+id/view_desafio"
                android:layout_width="150dp"
                android:layout_height="175dp"
                android:layout_gravity="left"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="524dp"
                android:background="@drawable/caixaviewmenu" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="540dp"
                android:gravity="center"
                android:text="Desafios"
                android:textColor="@color/rosa"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="94dp"
                android:layout_marginTop="569dp"
                android:src="@drawable/desafio" />


            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="620dp"
                android:gravity="center"
                android:text="Já se desafiou hoje?"
                android:textColor="@android:color/black"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btn_tela_desafio"
                android:layout_width="121dp"
                android:layout_height="28dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="655dp"
                android:background="@drawable/btn_color_menu"
                android:text="Realizar"
                android:textColor="@android:color/background_light"
                android:textSize="10sp" />


            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="430dp"
                android:gravity="center"
                android:text="Você possui uma mensagem!"
                android:textColor="@android:color/black"
                android:textSize="11sp" />

            <View
                android:id="@+id/view_relato"
                android:layout_width="150dp"
                android:layout_height="175dp"
                android:layout_gravity="right"
                android:layout_marginTop="330dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/caixaviewmenu" />

            <TextView
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="216dp"
                android:layout_marginTop="355dp"
                android:gravity="center"
                android:text="Relate seu dia"
                android:textColor="@color/rosa"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="272dp"
                android:layout_marginTop="380dp"
                android:src="@drawable/relato" />


            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="430dp"
                android:gravity="center"
                android:text="Já fez seu relato hoje?"
                android:textColor="@android:color/black"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btn_tela_relato"
                android:layout_width="121dp"
                android:layout_height="28dp"
                android:layout_gravity="right"
                android:layout_marginTop="465dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/btn_color_menu"
                android:text="Escrever"
                android:textColor="@android:color/background_light"
                android:textSize="10sp" />


            <View
                android:id="@+id/view_questao"
                android:layout_width="150dp"
                android:layout_height="175dp"
                android:layout_marginTop="524dp"
                android:layout_marginRight="43dp"
                android:layout_gravity="right"
                android:background="@drawable/caixaviewmenu" />

            <TextView
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="534dp"
                android:gravity="center"
                android:text="Questões motivadoras"
                android:textColor="@color/rosa"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="272dp"
                android:layout_marginTop="572dp"
                android:src="@drawable/questao" />


            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="245dp"
                android:layout_marginTop="620dp"
                android:gravity="center"
                android:text="Desmotivado para escrever?"
                android:textColor="@android:color/black"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btn_tela_questao"
                android:layout_width="121dp"
                android:layout_height="28dp"
                android:layout_gravity="right"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="655dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/btn_color_menu"
                android:text="Responder"
                android:textColor="@android:color/background_light"
                android:textSize="10sp" />

            <View
                android:id="@+id/view_maquina"
                android:layout_width="324dp"
                android:layout_height="175dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="718dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/caixaviewmenu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="750dp"
                android:layout_marginRight="80dp"
                android:gravity="center"
                android:text="Máquina do tempo"
                android:textColor="@color/azul"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="77dp"
                android:layout_marginTop="760dp"
                android:src="@drawable/maquinadotempo" />


            <TextView
                android:layout_width="183dp"
                android:layout_height="68dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="767dp"
                android:gravity="center"
                android:text="@string/menu_maquina"
                android:textColor="@android:color/black"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btn_tela_mauqinadotempo"
                android:layout_width="121dp"
                android:layout_height="28dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="830dp"
                android:background="@drawable/btn_color_menu_2"
                android:text="Abrir"
                android:textColor="@android:color/background_light"
                android:textSize="10sp" />

        </FrameLayout>


    </ScrollView>

</LinearLayout>