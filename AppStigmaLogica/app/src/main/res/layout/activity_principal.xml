<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PrincipalActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="114dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/logorosa" />

        <ImageButton
            android:id="@+id/btn_config"
            android:layout_width="57dp"
            android:layout_height="50dp"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/config" />

    </FrameLayout>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="424dp"
                android:layout_height="278dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/base6" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="140dp"
                android:layout_marginTop="130dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/grafico" />


            <TextView
                android:id="@+id/txt_nome_logado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="90dp"
                android:text="Kim Seokjin"
                android:textColor="@color/azul"
                android:textSize="18sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btn_tela_mensagem"
                android:layout_width="132dp"
                android:layout_height="157dp"
                android:layout_gravity="left"
                android:layout_marginTop="300dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/mensagensdiarias"
                android:drawableTop="#F5F5F5" />

            <Button
                android:id="@+id/btn_tela_relato"
                android:layout_width="132dp"
                android:layout_height="157dp"
                android:layout_marginTop="300dp"
                android:layout_marginLeft="220dp"
                android:background="@drawable/relatosdiarios"
                android:drawableTop="#F5F5F5" />

            <Button
                android:id="@+id/btn_maquina"
                android:layout_width="313dp"
                android:layout_height="147dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="490dp"
                android:background="@drawable/maquinadotempo"
                android:drawableTop="#F5F5F5" />



        </FrameLayout>

    </ScrollView>

</LinearLayout>