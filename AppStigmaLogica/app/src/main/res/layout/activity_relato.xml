<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.projeto.appstigma.RelatoActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btn_voltar_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/voltar" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="114dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/logorosa" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Relate seu dia"
            android:textColor="@color/rosa"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="149dp"
            android:layout_height="20dp"
            android:layout_marginStart="131dp"
            android:layout_marginLeft="131dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="131dp"
            android:layout_marginRight="131dp"
            android:gravity="center"
            android:text="14 set 2019, Sábado"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:src="@drawable/painel" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="433dp"
            android:layout_height="65dp"
            android:layout_marginTop="140dp"
            android:gravity="center"
            android:text="Como está se sentindo?"
            android:textColor="#357989"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/btn_muitofeliz"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="60dp"
                android:background="@drawable/happy2" />

            <ImageButton
                android:id="@+id/btn_feliz"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/happy" />

            <ImageButton
                android:id="@+id/btn_neutro"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shocked" />

            <ImageButton
                android:id="@+id/btn_triste"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/sad" />

            <ImageButton
                android:id="@+id/btn_muitotriste"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/sad2" />

            <ImageButton
                android:id="@+id/btn_cansado"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bad" />


        </LinearLayout>
    </FrameLayout>


    <EditText
        android:id="@+id/txt_relato"
        android:layout_width="363dp"
        android:layout_height="123dp"
        android:layout_gravity="center"
        android:background="@drawable/caixatext"
        android:gravity="top"
        android:hint="Escreva aqui..."
        android:padding="20dp"
        android:textSize="18sp" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">

        <View
            android:layout_width="133dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginRight="23dp"
            android:background="@drawable/caixaview" />

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="22dp"
            android:layout_gravity="right"
            android:layout_marginTop="14dp"
            android:layout_marginRight="80dp"
            android:src="@drawable/images" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="8dp"
            android:text="@string/checkbox"
            android:textColor="@color/azul" />

        <Button
            android:id="@+id/btn_salvar"
            android:layout_width="133dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_color"
            android:gravity="center"
            android:text="Salvar"
            android:textColor="@android:color/background_light"
            android:textSize="12sp" />
    </FrameLayout>
</LinearLayout>

