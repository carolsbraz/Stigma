<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        >

        <View
            android:id="@+id/bloco_questao"
            android:layout_width="380dp"
            android:layout_height="142dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/caixaviewmenu" />

        <View
            android:id="@+id/linha"
            android:layout_width="290dp"
            android:layout_height="2dp"
            android:layout_marginTop="95dp"
            android:layout_gravity="center_horizontal"
            android:background="#3D000000" />


        <TextView
            android:id="@+id/txt_titulo_desafio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp"
            android:text="Null"
            android:textSize="18sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:maxLength="20"/>

        <TextView
            android:id="@+id/txt_desafio"
            android:layout_width="276dp"
            android:layout_height="38dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="50dp"
            android:maxLength="50"
            android:text="Null"
            android:textSize="15sp" />

        <TextView
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="105dp"
            android:gravity="center"
            android:id="@+id/txt_valor"
            android:text="Complete para aumentar seu nÃ­vel!" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/st_concluido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="65dp"
            android:theme="@style/SCBSwitch"/>

    </FrameLayout>

</LinearLayout>